<div class="container">
  <h1>Token List</h1>
  <div class="table-responsive">
    <!-- テーブルにクラスを追加 -->
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Symbol</th>
          <th>Token Name</th>
          <th>Totak Tokens</th>
          <th>Balance</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tokens.each do |token| %>
          <tr>
            <td><%= token.symbol %></td>
            <td><%= token.name %></td>
            <td><%= token.totalTokens%></td>
            <td><%= token.balanceTokens%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
  <br>
  <br>
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <%= link_to "Token Issue", new_token_path, class:'btn btn-primary btn-block'%>
  </div>
</div>
