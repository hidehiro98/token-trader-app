<div class="container">
  <h1>Token Trade Information List</h1>
  <div class="table-responsive">
    <!-- テーブルにクラスを追加 -->
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Price</th>
          <th>EXE</th>
          <th>TST</th>
          <th>Purchase</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tradeinfos.each do |tradeinfos| %>
          <tr>
            <td><%= tradeinfos.price %></td>
            <td><%= tradeinfos.fromToken %></td>
            <td><%= tradeinfos.toToken %></td>
            <td><label>EXE</label></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
  <br>
  <br>
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <%= link_to "Token Trade", selecttoken_path, class:'btn btn-primary btn-block'%>
  </div>
</div>
